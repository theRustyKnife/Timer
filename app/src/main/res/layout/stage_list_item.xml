<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginBottom="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="left"
                    android:layout_gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/stage_list_item_number"
                        android:textSize="23sp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="1.5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="19sp"
                        android:background="@drawable/rounded_corner"
                        android:paddingLeft="5dp"
                        android:minWidth="80dp"
                        android:paddingRight="5dp"
                        android:paddingTop="1dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/stage_list_item_name"/>
                </LinearLayout>

                <!--<Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stage_list_item_delete"
                    android:text="@string/stage_delete"
                    android:textSize="13sp"
                    android:minHeight="40dp"
                    android:minWidth="10dp"
                    android:layout_gravity="right"/>-->

                <ImageButton
                    android:layout_width="33dp"
                    android:layout_height="33dp"
                    android:id="@+id/stage_list_item_delete"
                    android:scaleType="fitCenter"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:background="?android:selectableItemBackground"
                    android:alpha="@string/button_alpha"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:padding="5dp"
                    android:text="@string/pause_before"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stage_list_item_pause_before"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corner"
                    android:padding="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/duration"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/stage_list_item_duration"
                    android:textSize="14sp"
                    android:background="@drawable/rounded_corner"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>